<div class="container-fluid">
    <div class="side-body">
	    <div class="row">
	        <div class="col-lg-12">
				<h3 class="task_list_title"> <%= @task_list.name %> <i class="created_at">created by <%= @task_list.user.email %></i></h3>
				<div class="edit_tasklist">
					<%= link_to 'Edit', edit_task_list_path(@task_list) %> |
					<%= link_to 'Destroy', task_list_path(@task_list), method: :delete, data: { confirm: 'Are you sure?' } %>
				</div>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-lg-12">
				<%= render 'task_items/form' %>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-lg-12">
				<% if !@task_list.task_items.incomplete.blank? %>
					<%= render @task_list.task_items.incomplete %>
				<% end %>
			</div>
		</div>
		<br>
		
		<div class="row">
			<div class="col-lg-12">

				<div class="completed_items_wrapper">
					<%= link_to "Show completed items", "#toggle_completed_items", id: "completed_items" %>
				</div>
				<% if !@task_list.task_items.complete.blank? %>
					<div id="toggle_completed_items">
						<%= render @task_list.task_items.complete %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>