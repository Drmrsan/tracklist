                    <li><%= link_to "New Task", new_task_list_path, id: "new_task", remote: true %></li>
                    <% @task_lists.each do |task_list| %>
                        <li class="sidebar_icon"><%= link_to raw('<i class="fa fa-star"></i>' + task_list.name), task_list %></li>
